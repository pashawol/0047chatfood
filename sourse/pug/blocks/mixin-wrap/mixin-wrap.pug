mixin addblock()
	+b.addBlock
		+e.btn--minus(type="button")
		input(type="text" value="1")
		+e.btn--plus(type="button")

mixin logo()
	a(href="/")
		img(src="img/svg/logo.svg" laoding="lazy", alt="")


mixin stars()
	+b.stars
		+e.INPUT.rating(max='5' readonly='' step='0.01' style=`--fill:#FF7200; --value:4.7` type='range' value='4.7')
		//- +e.INPUT.rating(max='5' step='0.01' style=`--fill:#FF7200; --value:4.7` oninput="this.style.setProperty('--value', `${this.valueAsNumber}`)" type='range' value='4.7')
		span 4.7
		
