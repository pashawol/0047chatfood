		ul
			mixin li(n)
				li
					if n
						a.page-numbers(href='#')= n 
					else
						block
			+li()
				a.next.page-numbers.disabled(href='#')
					+icon('prev')
			+li()
				span.page-numbers.current 1
			+li(2)
